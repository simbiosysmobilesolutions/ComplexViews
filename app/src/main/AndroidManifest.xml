        </activity>
        <activity
            android:name=".TimePicker"
            android:label="@string/title_activity_time_picker">

        </activity>
        <activity
            android:name=".DatePicker"
            android:label="@string/title_activity_date_picker">

        </activity>
    </application>

</manifest>
